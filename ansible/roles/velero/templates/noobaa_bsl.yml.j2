---
apiVersion: velero.io/v1
kind: BackupStorageLocation
metadata:
  name: noobaa
  namespace: {{ velero_namespace }}
spec:
  provider: aws
  objectStorage:
    bucket: {{ noobaa_oadp_bucket_name }}
    prefix: velero
  config:
    region: noobaa
    s3ForcePathStyle: "true"
    s3Url: "{{ noobaa_s3_endpoint_proto }}://{{ noobaa_endpoint }}"
    insecureSkipTLSVerify: "true"
